<div id="<%= dom_id master %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Id:</strong>
    <%= master.id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">About me:</strong>
    <%= master.about_me %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Certificate:</strong>
    <%= master.certificate_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Article:</strong>
    <%= master.article_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Contact:</strong>
    <%= master.contact_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Review:</strong>
    <%= master.review_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Service:</strong>
    <%= master.service_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Discount:</strong>
    <%= master.discount_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this master", master, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this master', edit_master_path(master), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
