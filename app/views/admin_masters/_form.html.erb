<%= form_with(model: admin_master, class: "contents") do |form| %>
  <% if admin_master.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(admin_master.errors.count, "error") %> prohibited this admin_master from being saved:</h2>

      <ul>
        <% admin_master.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
